<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.lpy.myapplication.custom.MagicArray
        android:id="@+id/magicArray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.example.lpy.myapplication.custom.CircleView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/white"
        android:padding="10dp"
        app:circle_color="@color/colorAccent" />

    <com.example.lpy.myapplication.custom.AnalogClock
        android:id="@+id/analogClock"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
</RelativeLayout>